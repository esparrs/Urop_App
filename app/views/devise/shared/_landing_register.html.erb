<div id="landing-register" class="span4"><!--This will hold the signup form-->
	<div style="background-color: #efefef; border: #efefef 1px solid; border-bottom: 
		none" class="well"><!--Here, I am setting up the signup box in a similar manner to Greenbate.
				co. I left off a class="well" at the end. We'll see if I need it.-->
		<h3>Sign Up</h3>
		<div class="form-wrapper"><!--This should be what is actually keeping my signup
									form together.-->
			<!--These have all been generated by devise-->
			<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
			<%= devise_error_messages! %>
				<fieldset>
					<div class="control-group">
						<!--Leaving out the labels
						<%= f.label :name, :class => "control-label"%>--> 
						<div class="controls">
							<%= f.text_field :name, :value => "", :placeholder => "Name", :class => "input-large", :autofocus => true%>
						</div>
						<!--Leaving out the labels
						<%= f.label :username, :class => "control-label"%>-->
						<div class="controls">
							<%= f.text_field :username, :value => "", :placeholder => "Username", :class => "input-large"%>
						</div>
						<!--Leaving out the labels
						<%= f.label :email, :class => "control-label"%>-->
						<div class="controls">
							<%= f.email_field :email, :value => "", :placeholder=> "Email", :class => "input-large"%>
						</div>
						<!--Leaving out the labels
						<%= f.label :password, :class => "control-label"%>-->
						<div class="controls">
							<!-- <div class="span6"> -->
								<div class="clearfix">
									<%= f.password_field :password, :value => "", :placeholder => "Password", :class => "input-half_large"%>
								</div>
							<!-- </div> -->
							<!-- <div class="span6"> -->
								<div class="clearfix">
									<%= f.password_field :password_confirmation, :value => "", :placeholder => "Repeat Password", :class => "input-half_large"%>
								</div>
							<!-- </div> -->
						</div>
					</div>
						<div>
						<%= f.submit "Sign In", :class => "btn btn-primary" %>
					</div>
				</fieldset>
			<% end %>
			<%= render "devise/shared/links" %>
		</div>
	</div>
</div>